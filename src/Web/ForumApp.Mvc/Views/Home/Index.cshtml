@using ForumApp.Mvc.Models.Shared
@using ForumApp.Mvc.Models.Forum
@model PagableListViewModel<ForumViewModel>

@{
    ViewBag.Title = "Forums";
}

<div class="row">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h2 class="panel-title">Forums</h2>
        </div>
        <div class="panel-body">
            <table class="table table-striped table-hover ">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Posts</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var forum in @Model.Data)
            {
                <tr>
                    <td>@Html.ActionLink(@forum.Title, "Index", "Forum", new { page = 1, id = forum.Id }, new object { })</td>
                    <td class="small-col">@forum.NumberPosts</td>
                </tr>
                    }
                </tbody>
            </table>
            @Html.Partial("_Pagable", @Model)
        </div>
    </div>
</div>